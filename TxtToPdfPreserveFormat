private static String sanitizeText(String text) {
        StringBuilder sanitizedText = new StringBuilder();
        for (char ch : text.toCharArray()) {
            if (PDType1Font.COURIER.encode(Character.toString(ch)) != null) {
                sanitizedText.append(ch); // Keep supported characters
            } else if (Character.isWhitespace(ch)) {
                sanitizedText.append(" "); // Preserve spaces
            } else {
                sanitizedText.append("?"); // Replace unsupported characters with '?'
            }
        }
        return sanitizedText.toString();
    }
